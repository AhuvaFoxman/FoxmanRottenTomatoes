<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/recyclerView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        />



    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/thumbnail"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:text ="Title"
        android:id="@+id/title"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_marginTop="15dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="18dp"
        android:maxHeight="20dp"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/thumbnail"
        android:id="@+id/rottenTomatoes"
        android:adjustViewBounds="true"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/rottenTomatoes"
        android:id="@+id/critics"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="18dp"
        android:maxHeight="20dp"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/critics"
        android:id="@+id/flixterImage"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/flixterImage"
            android:id="@+id/audience"
            android:layout_marginTop="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:maxLines="1"
        android:layout_below="@+id/critics"
        android:layout_toRightOf="@id/thumbnail"
        android:id="@+id/cast"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:layout_below="@+id/cast"
        android:layout_toRightOf="@id/thumbnail"
        android:id="@+id/ratingRuntime"
        android:layout_marginTop="10dp"
        />




</RelativeLayout>