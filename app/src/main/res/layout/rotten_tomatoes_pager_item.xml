<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="#d5ff14">

     <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>

        <TextView
            android:id = "@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="50dp"
            android:typeface="serif"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            tools:text="NAME"/>

        <ImageView
            android:id="@+id/imageTwo"
            android:layout_width="130dp"
            android:layout_alignParentTop="@+id/image"
            android:layout_below="@+id/name"
            android:scaleType="fitStart"
            android:layout_height = "130dp"
            android:padding=".5dp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/critic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="16dp"
            android:layout_below="@id/name"
            android:layout_toRightOf="@+id/imageTwo"
            android:layout_alignParentTop="@+id/image"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="28dp"
            android:maxHeight="30dp"
            android:layout_below="@+id/critic"
            android:layout_toRightOf="@+id/imageTwo"
            android:layout_alignParentTop="@+id/image"
            android:id="@+id/rottenTomatoes"
            android:adjustViewBounds="true"/>

        <TextView
            android:id = "@+id/cScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="@+id/image"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/critic"
            android:layout_toRightOf="@+id/rottenTomatoes"
            />

        <TextView
            android:id = "@+id/audience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="16dp"
            tools:text="audience"
            android:layout_marginTop="10dp"
            android:layout_below="@id/name"
            android:layout_toRightOf="@+id/critic"
            android:layout_alignParentTop="@+id/image"
            android:layout_gravity="bottom"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="28dp"
            android:maxHeight="30dp"
            android:layout_below="@+id/audience"
            android:layout_toRightOf="@+id/cScore"
            android:layout_alignParentTop="@+id/image"
            android:id="@+id/criticImage"
            android:layout_marginLeft="80dp"
            android:adjustViewBounds="true"
            />


        <TextView
            android:id = "@+id/aScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="@+id/image"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/audience"
            android:layout_toRightOf="@+id/criticImage"
            android:layout_gravity="bottom"/>



    </RelativeLayout>





    <TextView
        android:id="@+id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_centerHorizontal="true"
        tools:text="summary"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/rated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_centerHorizontal="true"
        tools:text="rated"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/runtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rated"
        android:layout_marginTop="10dp"/>



    <TextView
        android:id="@+id/released"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_centerHorizontal="true"
        tools:text="released"
        android:layout_marginTop="10dp"/>






</LinearLayout>